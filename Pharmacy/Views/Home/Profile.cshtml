@model Pharmacy.Domain.ViewModels.ProfileViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Профиль пользователя";
    var defaultImage = "/images/default-profile — копия.jpg";
    var userImage = string.IsNullOrEmpty(Model.PartImage) ? defaultImage : Model.PartImage;
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/profile.css">
</head>
<body>
<div class="profile-container">
    <div class="profile-header">
        <h1>Профиль пользователя</h1>
    </div>
    <div class="profile-info">
        <div class="profile-image">
            <img src="@Model.PartImage" alt="Фото пользователя" class="user-image"/>
        </div>
        <div class="profile-details">
            <p><strong>Логин:</strong> @Model.Login</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Дата регистрации:</strong> @Model.CreatedAt.ToString("dd MMMM yyyy")</p>
        </div>
    </div>
</div>
</body>