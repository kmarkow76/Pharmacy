@model List<Pharmacy.Domain.ViewModels.Category.CategoryViewModel>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Категории";
}

<link rel="stylesheet" href="~/css/category.css" asp-append-version="true">

<div class="container-categories">
    <div class="grid-container">
        @if (Model.Count != 0)
        {
            @foreach (var item in Model)
            {
                <div class="card-category" onclick="window.location.href = '@Url.Action("ListOfMedicines","Medicines",new {Id = item.Id })'">
                    <img src="@(!string.IsNullOrEmpty(item.PathImage) ? item.PathImage : "~/images/default.jpg")" alt="@item.Name" class="card-image" />
                    <div class="card-content">
                        <h3 class="card-title">@item.Name</h3>
                    </div>
                </div>
            }
           
        }
    </div>
</div>