<link rel="stylesheet" href="~/css/category.css" asp-append-version="true">
<<div class="container-categories"> 
    <div class="grid-container">
        @if (Model.Count != 0)
        {
            @foreach (var item in Model)
            {
                <div class="card-category">
                    <!-- Добавлена проверка на пустое изображение -->
                    <img src="@(!string.IsNullOrEmpty(item.PathImg) ? item.PathImg : "/images/default.jpg")" alt="@item.Name" class="card-image" />
                    <div class="card-overlay">
                        <div class="card-title">@item.Name</div>
                        <p class="card-description">
                            Количество товаров: @item.CountMed <br /> 
                            Перейти к списку товаров =>
                        </p>
                    </div>
                </div>
            }
        }
    </div>
</div>
